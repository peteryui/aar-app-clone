<%= content_tag_for(:li, todo, :class => "list-group-item" ) do %>

  <div class="row">


    <div class="col-xs-10">
      <div class="group ">

        <h6 >
          <%= render_todo_status(todo)  %> <span class="underline">  <%= render_todo_subject(todo) %>  </span>
        </h6>

        <%= todo.content.to_markdown %>
      </div>
    </div>

    <div class="col-xs-2">
      <%= render :partial => "review_todos/box_options", :locals => { :todo => todo, :review => @review } %>



    </div>

  </div>

  <div class="row">
        <div class="col-xs-12"  >

          <div class="mic-info pull-right" >
            By: <%= render_user_name(todo.user) %> on  <span class="underline"><%= todo.updated_at.to_s(:short) %> </span>
          </div>

        </div>
  </div>

<% end %>
